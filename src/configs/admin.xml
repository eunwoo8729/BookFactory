<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
	"http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>

	<package name="admin" extends="struts-default, tiles-default">

		<!-- 도서 목록 -->
		<action name="adminBookList" class="adminBook.adminBookListAction">
			<result type="tiles">adminBookList</result>
		</action>

		<!-- 도서 등록 액션 -->
		<action name="adminBookWriteForm" class="adminBook.adminBookWriteAction" method="form">
			<result type="tiles">adminBookWriteForm</result>
		</action>

		<action name="adminBookWriteAction" class="adminBook.adminBookWriteAction">
			<result type="redirect-action">
				<param name="actionName">adminBookWrite</param>
			</result>
		</action>

		<!-- 도서 상세보기 액션 -->
		<action name="adminBookDetailForm" class="adminBook.adminBookDetailAction" method="form">
			<result type="tiles">adminBookDetail</result>
		</action>
		
		<action name="adminBookDetailAction" class="adminBook.adminBookDetailAction">
		<result type="redirect-action">
		<param name="tiles"></param>
		</result>
		</action>

		<!-- 도서 수정 액션 -->
		<action name="adminBookModifyForm" class="adminBook.adminBooModifyAction" method="form">
			<result type="chain">adminBookModifyForm</result>
		</action>

		<action name="adminBookModifyAction" class="adminBook.adminBookModifyAction">
			<result type="chain">adminBookModify</result>
		</action>

		<!-- 도서 삭제 액션 -->
		<action name="adminBookDelete" class="adminBook.adminBookDeleteAction">
			<result type="redirect-action">
				<param name="actionName">adminBookDelete</param>
			</result>
		</action>

		<!-- 회원 정보 관리 액션 -->
		<action name="adminMemberListForm" class="adminMember.adminMemberList" method="form">
			<result type="tiles">adminMemberList</result>
		</action>
		
		<action name="adminMemberListAction" class="adminMember.adminMemberListAction" >
			<result type="redirect-action">adminMemberList</result>
		</action>

		<action name="adminMemberDetailForm" class="adminMemberkAdminMemberDetail" method="form">
			<result type="tiles">adminMemberDetailForm</result>
		</action>

		<action name="adminMemberDeleteAction" class="adminMember.AdminMemberDelete"
			method="delete">
			<result type="redirect-action">
				<param name="actionName">adminMemberDelete</param>
			</result>
		</action>
		
	</package>

</struts>
