<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMap PUBLIC '-//ibatis.apache.org//DTD Sql Map 2.0//EN' 'http://ibatis.apache.org/dtd/sql-map-2.dtd'>
<sqlMap namespace="Notice">
	<typeAlias alias="notice" type="faq.faqVO" />

	<resultMap id="faqRes" class="faq">
		<result property="f_no" column="f_no" />
		<result property="f_subject" column="f_subject" />
		<result property="f_content" column="f_content" />
		<result property="f_regdate" column="f_regdate" />
		<result property="f_readhit" column="f_readhit" />
	</resultMap>

	<sql id="select-all">
		SELECT * FROM FAQBOARD
	</sql>

	<sql id="where-no">
		where f_no=#f_no#
	</sql>

	<select id="selectAll" resultMap="boardRes">
		<include refid="select-all"></include>
		order by f_no desc
	</select>

	<select id="selectOne" resultMap="boardRes" parameterClass="int">
		<include refid="select-all" />
		<include refid="where-no" />
	</select>


	<!-- 검색 -->

	<select id="selectSearchS" resultMap="boardRes" parameterClass="string">
		<include refid="select-all" />
		WHERE F_SUBJECT like #searchKeyword#
		ORDER BY f_no DESC
	</select>

	<select id="selectSearchC" resultMap="boardRes" parameterClass="string">
		<include refid="select-all" />
		WHERE F_CONTENT like #searchKeyword#
		ORDER BY f_no DESC
	</select>

	<insert id="insertBoard" parameterClass="board">
		INSERT INTO FAQBOARD
		(
		F_NO,
		F_SUBJECT,
		F_CONTENT,
		F_REGDATE,
		F_READHIT
		)
		VALUES (
		FAQBOARD_NO_SEQ.NEXTVAL,
		#F_SUBJECT#,
		#F_CONTENT#,
		SYSDATE,
		#F_READHIT#		
		)
	</insert>

	<update id="updateBoard" parameterClass="board">
		UPDATE FAQBOARD SET SUBCJECT = #subject#,
		CONTENT = #content#
		<include refid="where-no" />
	</update>

	<update id="updateReadHit" parameterClass="board">
		UPDATE FAQBOARD SET READHIT = readhit + 1
		<include refid="where-no" />
	</update>

	<delete id="deleteBoard" parameterClass="board">
		DELETE FROM FAQBOARD
		<include refid="where-no" />
	</delete>

</sqlMap>