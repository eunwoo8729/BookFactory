<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMap PUBLIC '-//ibatis.apache.org//DTD Sql Map 2.0//EN' 'http://ibatis.apache.org/dtd/sql-map-2.dtd'>
<sqlMap namespace="admin">
	<!-- 관리자 책, 책좋아요 -->
	<typeAlias alias="admin" type="admin.AdminBookVO" />

	
	<!-- result map 정의 id:="adminRes" -->
	<resultMap id="adminRes" class="admin">
		<result property="b_no" column="b_no" />
		<result property="b_name" column="b_name" />
		<result property="b_writer" column="b_writer" />
		<result property="b_pub" column="b_pub" />
		<result property="b_pubdate" column="b_pubdate" />
		<result property="b_category" column="b_category" />
		<result property="b_count" column="b_count" />
		<result property="b_intro" column="b_intro" />
		<result property="b_writerintro" column="b_writerintro" />
		<result property="b_list" column="b_list" />
		<result property="b_like" column="b_like" />
		<result property="b_img" column="b_img" />
		<result property="b_imgcopy" column="b_imgcopy" />
	</resultMap>
	

	<sql id="select-all">
		SELECT * FROM BOOK
	</sql>
	
	<sql id="where-no">
		where b_no=#b_no#
	</sql>


	<select id="selectAll" resultMap="adminRes" parameterClass="int">
		<include refid="select-all"></include>
		order by b_no desc
	</select>

	
	<select id="selectOne" resultMap="adminRes" parameterClass="int">
		<include refid="select-all" />
		<include refid="where-no" />
	</select>
	
	
	<select id="loanCheck" resultMap="adminRes">
		select * from loan
		where l_no is not null
	</select>	
	
	<insert id="insertBook" parameterClass="admin">
		INSERT INTO BOOK
		(
		b_no,
		b_name,
		b_writer,
		b_pub,
		b_pubdate,
		b_category,
		b_count,
		b_intro,
		b_writerinfo,
		b_list,
		b_like,
		b_img,
		b_imgcopy,
		)
		VALUES (
		BOOK_NO_SEQ.NEXTVAL,
		#b_name#,
		#b_writer#,
		#b_pub#,
		#b_pubdate#,
		#b_category#,
		#b_count#,
		#b_intro#,
		#b_writerinfo#,
		#b_list#,
		#b_like#,
		#b_img#,
		#b_imgcopy#,
		)
	</insert>
	

	<update id="updateBook" parameterClass="admin">
    	UPDATE BOOK SET
    	b_name = #b_name#,
		b_writer = #b_writer#,
		b_pub = #b_pub#,
		b_pubdate = #b_pubdate#,
		b_category = #b_category#,
		b_count = #b_count#,
		b_intro = #b_intro#,
		b_writeintro = #b_writeintro#,
		b_img = #book_img#,
		b_imgcopy = #book_imgcopy#,
		<include refid="where-no" />
   	</update>


	<delete id="deleteBook" parameterClass="admin">
		DELETE FROM BOOK
		<include refid="where-no" />
	</delete>

</sqlMap>
	